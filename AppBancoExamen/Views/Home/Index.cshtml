@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <div class="container text-center bg-white p-4 rounded shadow">
        <h2 class="mb-3">Banco Online</h2>
        <h2 class="mb-3">Bienvenido @ViewBag.User.Name</h2>
        <p class="fw-bold">Número de cuenta:@ViewBag.Cuenta.NCuenta <span id="numCuenta" class="text-primary"></span></p>
        <p class="fs-4">Saldo:₡ @ViewBag.Cuenta.Saldo <span id="saldo" class="text-success"></span></p>
        <div class="row g-2 mt-3">
            <div class="col-md-4">
                <a class="btn btn-primary w-100" asp-area="" asp-controller="Home" asp-action="Privacy">Cambiar Cuenta</a>
           
            </div>
            <div class="col-md-4">
                <a class="btn btn-warning w-100" asp-area="" asp-controller="Home" asp-action="Transacciones">Hacer Transferencia</a>
                
            </div>
            <div class="col-md-4">
                <a class="btn btn-secondary w-100" asp-area="" asp-controller="Home" asp-action="Historial">Ver Historial</a>
               
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</div>
