@{
    ViewData["Title"] = "Historial Page";
}



<div class="container bg-white p-4 rounded shadow">
    <h2 class="text-center mb-4">Historial de transacciones</h2>
    <div class="mt-3 text-center">
        <input type="date" id="fechaBusqueda" class="form-control d-inline w-auto">
        <button class="btn btn-primary" onclick="">Buscar</button>
    </div>

    <div class="row g-2 mt-4 fw-bold text-center">
        <div class="col-md-2">Número de Cuenta</div>
        <div class="col-md-2">Fecha Inicio</div>
        <div class="col-md-2">Motivo</div>
        <div class="col-md-2">Cantidad</div>
    </div>

    @foreach (var transacciones in ViewBag.TransaccionesModel)
    {
        <div class="row g-2">
            <div class="col-md-2">
                <input type="text" class="btn-lg" placeholder="@transacciones.NumeroCuenta">
            </div>
            <div class="col-md-2">
                <input type="text" class="btn-lg" placeholder="@transacciones.FechaIni">
            </div>
            <div class="col-md-2">
                <input type="text" class="btn-lg" placeholder="@transacciones.Motivo">
            </div>
            <div class="col-md-2">
                <input type="text" class="btn-lg" placeholder="@transacciones.Cantidad">
            </div>
        </div>
    }
</div>

       

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>



